{
  "hosting": {
    "public": "public",
    "headers": [
      {
        "source": "/offscreen_auth.html",
        "headers": [
          { "key": "X-Frame-Options", "value": "ALLOWALL" },
          { "key": "Content-Security-Policy", "value": "frame-ancestors * chrome-extension://*" }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
} 